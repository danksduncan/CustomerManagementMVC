@model IEnumerable<MVCPatientApp.Models.Patient>

@{
    ViewBag.Title = "Index";
}

    <h2>View Active Patients</h2>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#tblCustomer').DataTable({
            });
        });
    </script>
}
    
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tblCustomer" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalComments)
            </th>
            <th>
                @Html.DisplayName("Last Updated")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsuranceCompany)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdditionalComments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>
