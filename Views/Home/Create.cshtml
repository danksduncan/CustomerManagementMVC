@model MVCPatientApp.Models.Patient

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<style type="text/css">
    .roundedcorner {
        background: #fff;
        font-family: Times New Roman, Times, serif;
        font-size: 11pt;
        margin-left: auto;
        margin-right: auto;
        margin-top: 1px;
        margin-bottom: 1px;
        padding: 3px;
        border-top: 1px solid #CCCCCC;
        border-left: 1px solid #CCCCCC;
        border-right: 1px solid #999999;
        border-bottom: 1px solid #999999;
        width: 250px;
        height: 20px;
        -moz-border-radius: 8px;
        -webkit-border-radius: 8px;
    }

    #newColor {
        color: black;
    }

    .btn-default:hover {
        background-color: #228999 !important;
    }
</style>

<body id="page4" style="background-color: ghostwhite;">
    <div class="body1">
        <div class="main">
            <header>
                <div class="wrapper">
                    <h1><a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)" id="logo">Agrox Agriculture Company</a></h1>
                    <nav>
                        <ul id="menu" style="padding-top: 60px;">
                            <li><a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Home</a></li>
                            <li class="active"><a href="@Url.Action("Create", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Registration</a></li>
                            <li><a href="@Url.Action("ViewList", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Admin Portal</a></li>
                        </ul>
                    </nav>
                </div>
            </header>
        </div>
    </div>

    <div class="body2" style="background-color: ghostwhite;">
        <div class="main">
            <article id="content2">
                <div class="wrapper">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h2 style=" color: black; ">New Customer Registration</h2>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <h4 id="newColor">Enter customer information below.</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "roundedcorner" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "roundedcorner" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "roundedcorner" } })
                                        @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "roundedcorner" } })
                                        @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "roundedcorner" } })
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.InsuranceCompany, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.InsuranceCompany, new { htmlAttributes = new { @class = "roundedcorner" } })
                                        @Html.ValidationMessageFor(model => model.InsuranceCompany, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.AdditionalComments, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.AdditionalComments, new { htmlAttributes = new { @class = "roundedcorner" } })
                                        @Html.ValidationMessageFor(model => model.AdditionalComments, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" id="newColor">
                                    @Html.LabelFor(model => model.CurrentDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.CurrentDate, new { @Value = @DateTime.Now.ToShortDateString(), @class = "roundedcorner" })
                                        @Html.ValidationMessageFor(model => model.CurrentDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" onmouseover="" value="Create" class="btn btn-default"
                                               style=" width: 145px;
                                                height: 40px;
                                                margin-left: 5px;
                                                margin-top: 18px;
                                                margin-bottom: 15px;
                                                border-radius: 8px;
                                                background-color: #59b1bf;
                                                color: white;
                                                cursor: pointer;"/>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </article>
        </div>
    </div>

    <div class="main">
        <footer>
            <div class="col-lg-12" style=" text-align-last: center;">
                <section>
                    <div id="footer_link" style=" color: black; ">
                        Copyright &copy; Duncan Li Portfolio All Rights Reserved<br>
                        www.duncanli.com/portfolio
                    </div>
                </section>
            </div>
        </footer>
    </div>
</body>
