@model IEnumerable<MVCPatientApp.Models.Patient>

@{
    ViewBag.Title = "ViewList";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

@section scripts
                            {
    <script>
        $(document).ready(function () {
            $('#tblOne').DataTable();
        });
    </script>
}

<body id="page2" style=" background-color: ghostwhite; ">
    <div class="body1">
        <div class="main">
            <header>
                <div class="wrapper">
                    <h1><a href="index.html" id="logo">Agrox Agriculture Company</a></h1>
                    <nav>
                        <ul id="menu" style="padding-top: 60px;">
                            <li><a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Home</a></li>
                            <li><a href="@Url.Action("Create", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Registration</a></li>
                            <li class="active"><a href="@Url.Action("ViewList", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Admin Portal</a></li>
                        </ul>
                    </nav>
                </div>
            </header>
        </div>
    </div>

    <div class="body2" style=" background-color: ghostwhite; ">
        <div class="main" style="width: auto">
            <article id="content2" style="margin-right: 10px;">
                <div class="wrapper">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h2 style=" color: black; ">Our Customers</h2>
                            <input type="submit" onmouseover="" onclick="location.href='@Url.Action("Create", "Home")'" value="Create New" class="btn btn-default"
                                style=" width: 130px;
                                height: 30px;
                                margin-left: 5px;
                                margin-bottom: 15px;
                                border-radius: 8px;
                                background-color: #86d4c3;
                                cursor: pointer;"/>
                                <style>
                                    #warning {
                                        opacity: 1;
                                        transition: opacity 1s, background 1s;
                                        background: #86d4c3;
                                    }
                                </style>

                            <table id="tblOne" class="display responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LastName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Birthday)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmailAddress)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.InsuranceCompany)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AdditionalComments)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CurrentDate)
                                        </th>
                                        <th>Edit Customer</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Birthday)
                                            </td>
                                            <td id="warning">
                                                @Html.DisplayFor(modelItem => item.EmailAddress)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InsuranceCompany)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdditionalComments)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CurrentDate)
                                            </td>
                                            <td id="warning">
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
            </article>
        </div>
    </div>

    <div class="main">
        <footer>
            <div class="col-lg-12" style=" text-align-last: center;">
                <section>
                    <div id="footer_link" style=" color: black; ">
                        Copyright &copy; Duncan Li Portfolio All Rights Reserved<br>
                        www.duncanli.com/portfolio
                    </div>
                </section>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>