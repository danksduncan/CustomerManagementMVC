@model IEnumerable<MVCPatientApp.Models.Patient>

@{
    ViewBag.Title = "ViewList";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

@section scripts
                            {
    <script>
        $(document).ready(function () {
            $('#tblOne').DataTable();
        });
    </script>
}

<body id="page2">
    <div class="body1">
        <div class="main">
            <!--header -->
            <header>
                <div class="wrapper">
                    <h1><a href="index.html" id="logo">Agrox Agriculture Company</a></h1>
                    <nav>
                        <ul id="menu" style="padding-top: 60px;">
                            <li><a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Home</a></li>
                            <li><a href="@Url.Action("Create", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Registration</a></li>
                            <li class="active"><a href="@Url.Action("ViewList", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Admin Portal</a></li>
                        </ul>
                    </nav>
                </div>
            </header>
            <!-- / header -->
            <!-- content -->
        </div>
    </div>

    <div class="body2" style=" background-color: ghostwhite; ">
        <div class="main" style="width: auto">
            <article id="content2" style="margin-right: 10px;">
                <div class="wrapper">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h2 style=" color: black; ">Our Customers</h2>
                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>
                        <table id="tblOne" class="display responsive nowrap">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Birthday)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmailAddress)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InsuranceCompany)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AdditionalComments)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CurrentDate)
                                    </th>
                                    <th>Edit Customer</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Birthday)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InsuranceCompany)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdditionalComments)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CurrentDate)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </article>
            <!-- / content -->
        </div>
    </div>

    <div class="main">
        <!-- footer -->
        <footer>
            <div class="wrapper">
                <section class="col2">
                    <div class="wrapper">
                        <section class="col4">
                            <h3>Links</h3>
                            <ul id="icons">
                                <li><a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Home</a></li>
                                <li><a href="@Url.Action("Create", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Registration</a></li>
                                <li class="active"><a href="@Url.Action("ViewList", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Admin Portal</a></li>
                            </ul>
                        </section>
                        <section class="col4 pad_left1">
                            <h3>About</h3>
                            <ul id="why_us">
                                <li><a href="#">Documentation</a></li>
                            </ul>
                        </section>
                        <div id="footer_link">
                            Copyright &copy; <a href="#">Duncan Li Portfolio</a> All Rights Reserved<br>
                            Design by <a target="_blank" href="http://www.templatemonster.com/">www.duncanli.com/portfolio</a>
                        </div>
                    </div>
                    <div id="footer_link">
                        Copyright &copy; <a href="#">Duncan Li Portfolio</a> All Rights Reserved<br>
                        Design by <a target="_blank" href="http://www.templatemonster.com/">www.duncanli.com/portfolio</a>
                    </div>
                </section>
            </div>
            <!-- {%FOOTER_LINK} -->
        </footer>
        <!-- / footer -->
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>