@model IEnumerable<MVCPatientApp.Models.Patient>

@{
    ViewBag.Title = "ViewList";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#tblOne').DataTable();
        });
    </script>
}

<body id="page2" style="background-color: ghostwhite;">
    <div class="body1">
        <div class="main">
            <header>
                <div class="wrapper">
                    <h1><a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)" id="logo">Agrox Agriculture Company</a></h1>
                    <nav>
                        <ul id="menu" style="padding-top: 60px;">
                            <li><a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Home</a></li>
                            <li><a href="@Url.Action("Create", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Registration</a></li>
                            <li class="active"><a href="@Url.Action("ViewList", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">Admin Portal</a></li>
                        </ul>
                    </nav>
                </div>
            </header>
        </div>
    </div>

    <div class="body2" style="background-color: ghostwhite;">
        <div class="main" style="width: auto">
            <article id="content2" style="margin-right: 10px;">
                <div class="wrapper">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h2 style="color: black;">Our Customers</h2>
                            <input type="submit" onclick="location.href='@Url.Action("Create", "Home")'" value="Create New" class="btn btn-default"
                                style=" width: 145px;
                                height: 40px;
                                margin-left: 5px;
                                margin-bottom: 15px;
                                border-radius: 8px;
                                background-color: #59b1bf;
                                color: white;
                                cursor: pointer;"/>
                                <style>
                                    .editColor {
                                        color: dimgrey;
                                    }

                                    .btn-default:hover {
                                        background-color: #228999 !important;
                                    }

                                    .dataTables_filter input {
                                        background: #fff;
                                        font-family: Times New Roman, Times, serif;
                                        font-size: 11pt;
                                        margin-left: auto;
                                        margin-right: auto;
                                        margin-top: 1px;
                                        margin-bottom: 1px;
                                        padding: 3px;
                                        border-top: 1px solid #CCCCCC;
                                        border-left: 1px solid #CCCCCC;
                                        border-right: 1px solid #999999;
                                        border-bottom: 1px solid #999999;
                                        width: 200px;
                                        height: 25px;
                                        -moz-border-radius: 8px;
                                        -webkit-border-radius: 8px;
                                    }

                                    div.dataTables_length select {
                                        padding: 3px;
                                        border-top: 1px solid #CCCCCC;
                                        border-left: 1px solid #CCCCCC;
                                        border-right: 1px solid #999999;
                                        border-bottom: 1px solid #999999;
                                        width: 60px;
                                        height: 25px;
                                        -moz-border-radius: 8px;
                                        -webkit-border-radius: 8px;
                                    }
                                </style>

                            <table id="tblOne" class="display responsive nowrap" style=" margin-bottom: 10px; padding-top: 10px;">
                                <thead>
                                    <tr class= "editColor">
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LastName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Birthday)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmailAddress)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PhoneNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.InsuranceCompany)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AdditionalComments)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CurrentDate)
                                        </th>
                                        <th>Edit Customer</th>
                                    </tr>
                                </thead>
                                <tbody class = "editColor" style="text-align: center;">

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Birthday)
                                            </td>
                                            <td>
                                                @Html.DisplayTextFor(modelItem => item.EmailAddress)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InsuranceCompany)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdditionalComments)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CurrentDate)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "editColor" }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "editColor" }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "editColor" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
            </article>
        </div>
    </div>

    <div class="main">
        <footer>
            <div class="col-lg-12" style=" text-align-last: center;">
                <section>
                    <div id="footer_link" style=" color: black; ">
                        Copyright &copy; Duncan Li Portfolio All Rights Reserved<br>
                        www.duncanli.com/portfolio
                    </div>
                </section>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>